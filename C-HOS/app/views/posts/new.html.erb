<h1>新規投稿</h1>

<%= form_for @newpost,:url => {:action => :create} do |f| %>
    <div class="field">
        <%= f.label :タイトル %><br/>
        <%= f.text_field :title, :size => 100 %>
    </div>
    <div class="field">
        <%= f.label :本文 %><br/>
        <%= f.text_area :overview, size: "90x10" %>
    </div>
        <%= f.label :画像 %><br/>
        <%= f.file_field :img, class: "image" %>
    <br/>
    <br/>

    <%=f.submit "投稿する" %>

    <%= link_to '戻る', :controller => "posts", :action => "index" %>
<% end %>